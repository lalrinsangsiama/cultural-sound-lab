# Cultural Sound Lab Web Application Environment Variables

# API Configuration
NEXT_PUBLIC_API_URL=https://api.culturalsoundlab.com

# Supabase Configuration (Frontend)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Authentication (if using custom JWT)
NEXT_PUBLIC_JWT_SECRET=your-jwt-secret-key

# Environment
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# Features Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_PAYMENTS=false
NEXT_PUBLIC_ENABLE_AI_GENERATION=true
NEXT_PUBLIC_ENABLE_DEMO_MODE=true

# External Services
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# File Upload & Storage
NEXT_PUBLIC_MAX_FILE_SIZE=50MB
NEXT_PUBLIC_ALLOWED_FILE_TYPES=audio/mpeg,audio/wav,audio/mp3,audio/mp4

# CDN & Assets
NEXT_PUBLIC_CDN_URL=https://cdn.culturalsoundlab.com
NEXT_PUBLIC_STORAGE_URL=https://storage.culturalsoundlab.com

# UI Configuration
NEXT_PUBLIC_APP_NAME=Cultural Sound Lab
NEXT_PUBLIC_APP_DESCRIPTION=AI-powered cultural music generation platform
NEXT_PUBLIC_SUPPORT_EMAIL=support@culturalsoundlab.com

# Rate Limiting (for client-side display)
NEXT_PUBLIC_RATE_LIMIT_REQUESTS=100
NEXT_PUBLIC_RATE_LIMIT_WINDOW=3600

# Social Media
NEXT_PUBLIC_TWITTER_HANDLE=@culturalsoundlab
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/cultural-sound-lab

# Legal & Compliance
NEXT_PUBLIC_PRIVACY_POLICY_URL=/privacy
NEXT_PUBLIC_TERMS_OF_SERVICE_URL=/terms
NEXT_PUBLIC_COOKIE_POLICY_URL=/cookies