        {
          "uid": "memory-usage-high",
          "title": "High Memory Usage",
          "condition": "C",
          "data": [
            {
              "refId": "A",
              "queryType": "",
              "relativeTimeRange": {
                "from": 300,
                "to": 0
              },
              "model": {
                "expr": "(process_resident_memory_bytes{job=\"cultural-sound-lab-api\"} / 1024 / 1024 / 1024) > 1",
