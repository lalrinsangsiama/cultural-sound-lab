{
  "groups": [
    {
      "name": "cultural-sound-lab-api-alerts",
      "orgId": 1,
      "folder": "cultural-sound-lab",
      "rules": [
        {
          "uid": "api-high-error-rate",
          "title": "High API Error Rate",
          "condition": "C",
          "data": [
            {
              "refId": "A",
              "queryType": "",
              "relativeTimeRange": {
                "from": 300,
                "to": 0
              },
              "model": {
                "expr": "rate(http_requests_total{job=\"cultural-sound-lab-api\", status=~\"5..\"}[5m]) / rate(http_requests_total{job=\"cultural-sound-lab-api\"}[5m]) * 100",
                "refId": "A"
              }
            },
            {
              "refId": "C",
              "queryType": "",
              "relativeTimeRange": {
                "from": 0,
                "to": 0
              },
              "model": {
                "conditions": [
                  {
                    "evaluator": {
                      "params": [5],
                      "type": "gt"
                    },
                    "operator": {
                      "type": "and"
                    },
                    "query": {
                      "params": ["A"]
                    },
                    "reducer": {
                      "params": [],
                      "type": "last"
                    },
                    "type": "query"
                  }
                ],
                "refId": "C"
              }
            }
          ],
          "noDataState": "NoData",
          "execErrState": "Alerting",
          "for": "5m",
          "annotations": {
            "description": "API error rate is above 5% for the last 5 minutes",
            "runbook_url": "https://docs.culturalsoundlab.com/runbooks/high-error-rate",
            "summary": "High error rate detected in Cultural Sound Lab API"
          },
          "labels": {
            "severity": "critical",
            "service": "cultural-sound-lab-api",
            "team": "backend"
          }
        },
        {
          "uid": "api-high-response-time",
          "title": "High API Response Time",
          "condition": "C",
          "data": [
            {
              "refId": "A",
              "queryType": "",
              "relativeTimeRange": {
                "from": 300,
                "to": 0
              },
              "model": {
                "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"cultural-sound-lab-api\"}[5m])) * 1000",
                "refId": "A"
              }
            },
            {
              "refId": "C",
              "queryType": "",
              "relativeTimeRange": {
                "from": 0,
                "to": 0
              },
              "model": {
                "conditions": [
                  {
                    "evaluator": {
                      "params": [2000],
                      "type": "gt"
                    },
                    "operator": {
                      "type": "and"
                    },
                    "query": {
                      "params": ["A"]
                    },
                    "reducer": {
                      "params": [],
                      "type": "last"
                    },
                    "type": "query"
                  }
                ],
                "refId": "C"
              }
            }
          ],
          "noDataState": "NoData",
          "execErrState": "Alerting",
          "for": "5m",
          "annotations": {
            "description": "95th percentile response time is above 2 seconds for the last 5 minutes",
            "runbook_url": "https://docs.culturalsoundlab.com/runbooks/high-response-time",
            "summary": "High response time detected in Cultural Sound Lab API"
          },
          "labels": {
            "severity": "warning",
            "service": "cultural-sound-lab-api",
            "team": "backend"
          }
        },
        {
          "uid": "database-connection-failure",
